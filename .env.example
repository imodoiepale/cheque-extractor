# =============================================================================
# OCR Check Processor - Environment Variables
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# -----------------------------------------------------------------------------
# Google Vision API
# -----------------------------------------------------------------------------
VISION_API_KEY=your-google-vision-api-key
VISION_API_PROJECT_ID=your-google-project-id

# -----------------------------------------------------------------------------
# QuickBooks Online
# -----------------------------------------------------------------------------
QBO_CLIENT_ID=your-qbo-client-id
QBO_CLIENT_SECRET=your-qbo-client-secret
QBO_REDIRECT_URI=http://localhost:3000/api/qbo/callback
QBO_ENVIRONMENT=sandbox

# -----------------------------------------------------------------------------
# Backend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_BACKEND_URL=http://localhost:4000
BACKEND_PORT=4000

# -----------------------------------------------------------------------------
# Processing Configuration
# -----------------------------------------------------------------------------
MAX_FILE_SIZE=10485760
SUPPORTED_FORMATS=pdf,png,jpg,jpeg
OCR_LANGUAGE=eng
CONFIDENCE_THRESHOLD_AUTO=0.90
CONFIDENCE_THRESHOLD_REVIEW=0.70

# -----------------------------------------------------------------------------
# Redis (for job queue)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# CSV Export
# -----------------------------------------------------------------------------
CSV_OUTPUT_DIR=/tmp